{
  "name": "react-ts-post",
  "packageManager": "yarn@3.6.3",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "scripts": {
    "start:prod": "NODE_ENV=production && yarn migration:run && ts-node src/index.ts",
    "dev": "NODE_ENV=development && yarn migration:run && nodemon src/index.ts",
    "build": "tsc",
    "serve": "NODE_ENV=production && yarn build && yarn migration:run && node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/data-source.ts",
    "migration:generate": "NODE_ENV=development yarn typeorm migration:generate",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "NODE_ENV=development yarn typeorm migration:revert"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^16.11.10",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^3.0.1",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "0.3.17"
  }
}
