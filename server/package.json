{
  "name": "react-ts-post",
  "packageManager": "yarn@3.6.3",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "scripts": {
    "start": "ts-node index.ts",
    "build": "tsc",
    "serve": "node dist/index.js"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.1",
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "typescript": "5.0.2"
  }
}
