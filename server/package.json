{
  "name": "react-ts-post",
  "packageManager": "yarn@3.6.3",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "scripts": {
    "start": " ts-node src/index.ts",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.1",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  }
}
